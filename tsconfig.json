{
  "compilerOptions": {
    "target": "es5",
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types" ,"types"],
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "dom",
    ],
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
